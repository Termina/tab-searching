{
  "name": "Tab Searching",
  "version": "0.2.0",
  "manifest_version": 2,
  "icons": {
    "128": "pic/tab-searching.png"
  },
  "background": {
    "scripts": ["js/bg.js"]
  },
  "content_security_policy": "script-src 'self' 'unsafe-eval' http://localhost:8080; object-src 'self'",
  "permissions": [
    "tabs",
    "history",
    "bookmarks",
    "chrome://favicon/",
    "http://*/*",
    "https://*/*"
  ],
  "web_accessible_resources": [
    "js/*",
    "css/*",
    "coffee/*"
  ],
  "browser_action": {
    "default_icon": "pic/tab-searching.png"
  },
  "commands": {
    "launch": {
      "suggested_key": {
        "default": "Ctrl+Period",
        "mac": "Command+Period"
      },
      "description": "Launch my searching tool"
    }
  }
}