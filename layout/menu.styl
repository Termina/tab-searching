
*
  box-sizing border-box

::-webkit-scrollbar
  width 4px
  height 4px

::-webkit-scrollbar-track
  width 4px
  background white

::-webkit-scrollbar-thumb
  background hsl(0,60,90)
  border-radius 2px

body
  margin 0px

#key
  width 100%
  height 30px
  border none
  outline none
  line-height 20px
  box-shadow 0px 0px 8px hsl(0,0,80)
  padding 4px 6px
  font-family 'Ubuntu Mono'
  font-size 14px

#menu
  width 100%
  height 570px
  // background hsl(0,0,90)
  overflow-y scroll

  .tab
    padding 6px 8px
    box-shadow 0px 2px 5px hsl(0,0,90)
    position relative

    .icon
      top 4px
      right 4px
      position absolute

    .content
      overflow hidden
      font-family Ubuntu
      width 340px

      &>div
        text-overflow ellipsis
        overflow hidden

      .title
        height 20px

      .url
        font-size 10px
        color hsl(240,90,90)
        height 16px

  #choose
    background hsl(0,0,80)

    .url
      color white