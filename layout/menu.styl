
*
  box-sizing border-box
  font-family 'Lucida Grande'

::-webkit-scrollbar
  width 6px
  height 6px

::-webkit-scrollbar-track
  width 4px
  background white

::-webkit-scrollbar-thumb
  background hsl(0,30,70)
  border-radius 2px

body
  margin 0px

#key
  width 100%
  height 30px
  border none
  outline none
  line-height 20px
  box-shadow 0px 0px 8px hsl(0,0,80)
  padding 4px 6px
  font-family 'Lucida Grande', 'Ubuntu Mono'
  font-size 14px

#menu
  width 100%
  height 570px
  // background hsl(0,0,90)
  overflow-y scroll
  padding 60px 0px 200px 0px

  .tab
    padding 6px 8px
    position relative
    color hsl(0,0,50)
    -webkit-transform-origin left center
    -webkit-transform scale(1)
    -webkit-transition-duration 0.06s

    .icon
      top 4px
      right 4px
      position absolute
      max-width 40px

    .content
      overflow hidden
      font-family Ubuntu
      width 340px

      &>div
        text-overflow ellipsis
        overflow hidden

      .title
        height 20px

      .url
        font-size 10px
        color hsl(240,90,90)
        height 16px

  #choose
    background hsl(0,0,90)
    color black
    -webkit-transform scale(1.1)

    .url
      color hsl(240,50,40)

#empty
  padding 40px
  font-family 'Ubuntu Mono'
  color blue
  text-shadow 0px 0px 6px hsl(240, 20, 80)