{
  "name": "search-tab-crx",
  "version": "0.0.3",
  "manifest_version": 2,
  "icons": {
    "48": "pic/s.png"
  },
  "background": {
    "scripts": ["lib/bg.js"]
  },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["lib/listen.js"],
      "run_at": "document_end"
    }
  ],
  "options_page": "build/options.html",
  "permissions": [
    "tabs",
    "history",
    "bookmarks",
    "chrome://favicon/",
    "http://*/*",
    "https://*/*"
  ],
  "web_accessible_resources": [
    "lib/*",
    "build/*",
    "coffee/*"
  ],
  "browser_action": {
    "default_icon": "pic/s.png"
  }
}